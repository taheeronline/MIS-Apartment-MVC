                <span asp-validation-for="ResidentGroupEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssociationGroupEmail" class="control-label"></label>
                <input asp-for="AssociationGroupEmail" class="form-control" />
                <span asp-validation-for="AssociationGroupEmail" class="text-danger"></span>
            </div>
