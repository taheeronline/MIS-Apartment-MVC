            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GpsLocation" class="control-label"></label>
                <input asp-for="GpsLocation" class="form-control" />
                <span asp-validation-for="GpsLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResidentGroupEmail" class="control-label"></label>
